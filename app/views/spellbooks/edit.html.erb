<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-sm-8">
    <%= form_for(@spellbook, html: {class: 'form-horizontal'}) do |f| %>
        <%= render 'fields', f: f %>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <%= f.submit "Save", class: "btn btn-primary" %>
            <%= link_to "Cancel", :back, class: "btn btn-default" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
