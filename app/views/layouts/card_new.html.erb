<% content_for :content do %>
    <h1><%= yield(:title) %></h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="col-sm-12">
          <%= form_for(@card, html: {class: 'form-horizontal preview_form'}) do |f| %>
              <%= render 'fields', f: f %>
              <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                  <%= f.submit "Create new card", class: "btn btn-primary" %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-4 preview_view" id="card_view">
        <%= render 'shared/card_card', card: @card.card_data %>
      </div>
    </div>
<% end %>

<%= render template: 'layouts/application' %>
