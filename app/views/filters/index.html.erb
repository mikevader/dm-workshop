<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-3 col-md-2 sidebar">
        <div class="row">
          <h2>Filters</h2>
        </div>
        <ul class="nav nav-sidebar">
          <% @filters.each do |filter| %>
            <li><span><a href="<%= filter_path(filter) %>"><%= filter.name %></a><%= link_to filter, method: :delete, data: { confirm: 'You sure?'}, 'aria-label' => 'delete' do -%>
                  <span class="glyphicon glyphicon-remove"></span>
              <% end -%></span></li>
          <% end %>
        </ul>
      </div>
      <div class="col-sm-9 col-md-10 main">
        <div class="row">
          <div class="page-header search-header">
            <h1><%= @filter.nil? ? 'Search' : @filter.name %></h1>
            <ul class="filter-operations">
              <li><button class="save-filter btn btn-default" data-toggle="modal" data-target="#saveFilterDialog"><%= @filter.nil? ? 'Save' : 'Save As' %></button></li>
            </ul>
          </div>
          <div class="modal fade" id="saveFilterDialog" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <%= form_tag filters_path, class: 'form-horizontal' do %>
                  <div class="modal-header">
                    <h4 class="modal-title">Save filter</h4>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="filterName" class="col-sm-2 control-label">Name</label>
                      <div class="col-sm-10">
                        <input type="hidden" name="filter[query]" id="filter_query">
                        <input type="text" class="form-control" id="filter_name" name="filter[name]">
                        <%#= text_field_tag filter[:name], '', class: "form-control", id: "filterName" %>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <%= submit_tag 'Save', name: nil, id: 'saveFilter', class: 'btn btn-primary' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">

            <%= form_tag filters_path, method: 'get', id: 'filter_search' do %>
                <div class="input-group">
                  <% search = (@filter.nil?) ? params[:search] : @filter.query %>
                  <%= text_field_tag :search, search, class: 'form-control', autocomplete: 'off', placeholder: 'Search for...' %>
                  <div class="input-group-btn">
                    <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
                        <span class="glyphicon glyphicon-search"></span>
                    <% end %>
                    <%= link_to print_path(search: search), class: 'btn btn-default', target: '_blank' do %>
                        <span class="glyphicon glyphicon-print"></span>
                    <% end %>
                  </div>
                </div>
                <div class="form-group">
                  <%= content_tag :div, @error.html_safe, class: 'alert alert-danger' if @error %>
                </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th class="last"></th>
              </tr>
              <%= render partial: @cards, collection: @cards, as: :card %>
            </table>
            <div id="modals">
              <%= render partial: 'shared/modal', collection: @cards, as: :card %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
