<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :hero_class_ids, 'Classes', class: 'control-label col-sm-3' %>
    <%= content_tag :div, class: 'col-sm-9' do -%>
        <%= content_tag :div, class: 'row' do %>
            <% per_column = (HeroClass.count/3).ceil %>
            <% count = 0 %>
            <%= f.collection_check_boxes(:hero_class_ids, HeroClass.all, :id, :name) do |b| -%>
                <%= raw '<div class="col-sm-4">' if count%per_column == 0 %>
                <% count += 1 %>
                <%= content_tag :div, class: 'checkbox' do -%>
                    <%= b.label {b.check_box + b.text} %>
                <% end -%>
                <%= raw '</div>' if count%per_column == 0 or count == HeroClass.count %>
            <% end -%>
        <% end -%>
    <% end -%>
<% end -%>

