<% provide(:title, "Edit spell") %>
<h1>Update spell</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_for(@spell, html: {class: 'form-horizontal preview_form'}) do |f| %>
        <%= render 'fields', f: f %>
      <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-sm-6 preview_view" id="card_view">
    <%= render 'shared/card_card', card: @spell.card_data %>
  </div>
</div>
