<% provide(:title, "Edit spell") %>
<h1>Update spell</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@spell, html: {class: "form-horizontal"}) do |f| %>
      <%= render 'fields', f: f %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
