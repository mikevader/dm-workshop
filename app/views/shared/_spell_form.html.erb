<%= form_for(@spell, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Name your spell" %>
  </div>
  <div class="field">
    <%= f.text_field :level, placeholder: "on which level" %>
  </div>
  <div class="field">
    <%= f.text_field :school, placeholder: "from what school" %>
  </div>
  <div class="field">
    <%= f.text_area :description, placeholder: "Compose new spell..." %>
  </div>
  <%= f.submit "Scribe", class: "btn btn-primary" %>

  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#spell_picture').bin('change', function() {
    var size_in_megabytes = this.files[0].size/1014/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.')
    }
  });
</script>
