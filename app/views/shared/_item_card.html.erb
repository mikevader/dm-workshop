<div id="item-<%= item.id %>" class="card card-size-25x35" style="color: grey; border-color: grey; background-color: grey;">
  <div class="card-title-inlineicon-container">
    <div class="card-title-inlineicon icon-drink-me"></div>
  </div>
  <div class="card-title card-title-13"><%= item.name %></div>
  <div class="card-content-container">
    <div class="card-element card-subtitle"><%= "#{item.category.name}, #{item.rarity.name}" %></div>
    <svg class="card-ruler" height="1" width="100" viewBox="0 0 100 1" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">    <polyline points="0,0 100,0.5 0,1" fill="grey"></polyline></svg>
    
    <div class="card-element card-property-line">
      <h4 class="card-property-name">Attunement</h4>
      <p class="card-p card-property-text"><%= item.attunement %></p>
    </div>
    <svg class="card-ruler" height="1" width="100" viewBox="0 0 100 1" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">    <polyline points="0,0 100,0.5 0,1" fill="grey"></polyline></svg>
    <span class="card-fill" style="-webkit-flex:2; flex:2;">
    </span>
    <div class="card-element card-description-line">
      <p class="card-p card-description-text"><%=   raw(item.description) %></p>
    </div>
    <span class="card-fill" style="-webkit-flex:3; flex:3;"></span>
  </div>
</div>
