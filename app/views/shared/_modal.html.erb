<% large ||= false %>
<% modal_size = (large == true) ? 'modal-lg' : 'modal-sm' %>

<div class="modal" id="myModal-<%= index %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog <%= modal_size %>" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <nav class="col-xs-12">
              <ul class="pager">
                <li class="previous"><a href="#" data-toggle="modal" data-dismiss="modal" data-target="#myModal-<%= prev_index %>"><span aria-hidden="true">&larr;</span> Older</a></li>
                <li class="next"><a href="#" data-toggle="modal" data-dismiss="modal" data-target="#myModal-<%= next_index %>">Newer <span aria-hidden="true">&rarr;</span></a></li>
              </ul>
            </nav>
          </div>
          <div class="row">
            <% unless yield.present? %>
              <div class="col-xs-12">
                <%= render 'shared/card_card', card: card.card_data %>
              </div>
            <% else %>
              <%= yield %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
