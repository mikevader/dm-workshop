<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-sm-8">
    <% %i{filters cards items monsters spells}.each do |type| -%>
        <div class="col-sm-8">
          <div class="row">
            <div class="col-xs-12">
              <h3><%= type.capitalize %> <small>(<%= @user.send(type).count %>)</small></h3>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-offset-1 col-xs-11">
              <p>
                <%= @user.send(type).map { |x| x.name }.join(', ') %>
              </p>
            </div>
          </div>
        </div>
    <% end -%>
  </div>
</div>
