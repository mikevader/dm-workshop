<%= render 'shared/error_messages', object: f.object %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :name, class: 'control-label col-sm-3' %>
    <%= content_tag(:div, f.text_field(:name, class: 'form-control'), class: 'col-sm-9') %>
<% end %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= content_tag :div, class: 'col-sm-offset-3 col-sm-9' do %>
        <%= content_tag :div, class: 'checkbox' do %>
            <%= f.label :shared do %>
                <%= f.check_box(:shared) %>Shared
            <% end %>
        <% end %>
        <%= content_tag(:span, id: 'content_help', class: 'help-block') do -%>
            Will be shared with other users.
        <% end %>
    <% end %>
<% end %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :cite, class: 'control-label col-sm-3' %>
    <%= content_tag(:div, f.text_field(:cite, class: 'form-control'), class: 'col-sm-9') %>
<% end %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :icon, class: 'control-label col-sm-3' %>
    <%= content_tag(:div, f.text_field(:icon, class: 'form-control'), class: 'col-sm-9') %>
<% end %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :color, class: 'control-label col-sm-3' %>
    <%= content_tag(:div, class: 'col-sm-9') do -%>
        <%= content_tag(:div, class: 'input-group') do -%>
            <%= content_tag(:span, class: 'input-group-addon') do -%>
                <select id='colorselector'>
                  <option value="" data-color="">white</option>
                  <option value="gray" data-color="gray">dimgray</option>
                  <option value="dimgray" data-color="dimgray">dimgray</option>
                  <option value="black" data-color="black">black</option>
                  <option value="darkgoldenrod" data-color="darkgoldenrod">darkgoldenrod</option>
                  <option value="saddlebrown" data-color="saddlebrown">saddlebrown</option>
                  <option value="indianred" data-color="indianred">indianred</option>
                  <option value="maroon" data-color="maroon">maroon</option>
                  <option value="indigo" data-color="indigo">indigo</option>
                  <option value="darkblue" data-color="darkblue">darkblue</option>
                  <option value="royalblue" data-color="royalblue">royalblue</option>
                  <option value="darkgreen" data-color="darkgreen">darkgreen</option>
                </select>
            <% end -%>
            <%= f.text_field(:color, class: 'form-control') %>
        <% end -%>
    <% end -%>

<% end %>

<%= content_tag :div, class: 'form-group' do -%>
    <%= f.label :contents, class: 'control-label col-sm-3' %>
    <%= content_tag(:div, class: 'col-sm-9') do -%>
        <%= f.text_area(:contents, class: 'form-control', rows: 10, style: ' white-space: pre-wrap;', 'aria-describedby' => 'content_help') %>
        <%= content_tag(:span, id: 'content_help', class: 'help-block') do -%>
            Use the card template language. You can find more information in the
            <a href="<%= help_path(anchor: 'card') %>" target="_blank">help</a>.
        <% end %>
    <% end %>
<% end %>

<%= render 'shared/tag_field', f: f %>
