<% provide(:title, "Edit card") %>
<h1>Update card <%= @card.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@card) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
