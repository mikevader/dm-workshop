  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Icon</th>
    <th>Color</th>
    <th colspan="99"></th>
  </tr>
  <%= render @cards %>
</table>

<%= render partial: 'modal', collection: @cards, as: :card %>
