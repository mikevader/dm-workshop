<tr>
  <td><button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal-<%= card_counter %>">
    o
  </button></td>
  <td><%= card.name %></td>
  <td><%= card.icon %></td>
  <td><%= card.color %></td>
  <% if admin_user? %>
      <td><%= link_to edit_card_path(card), 'aria-label' => 'edit' do -%>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end -%>
      </td>
      <td><%= link_to card, method: :delete, data: { confirm: "You sure?" }, 'aria-label' => 'delete' do -%>
        <span class="glyphicon glyphicon-remove"></span>
      <% end -%>
      </td>
  <% end %>
</tr>
