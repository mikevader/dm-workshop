<tr>
  <td><button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal-<%= card_counter %>">
    o
  </button></td>
  <td><%= card.name %></td>
  <td><%= card.icon %></td>
  <td><%= card.color %></td>
  <% if admin_user? %>
      <td><%= link_to edit_card_path(card) do -%>
        <span class="glyphicon glyphicon-pencil" aria-label="edit"></span>
      <% end -%>
      </td>
      <td><%= link_to card, method: :delete, data: { confirm: "You sure?" } do -%>
        <span class="glyphicon glyphicon-remove" arial-label="delete"></span>
      <% end -%>
      </td>
  <% end %>
</tr>
