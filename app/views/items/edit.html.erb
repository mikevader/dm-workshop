<% provide(:title, "Edit items") %>
<h1>Update item <%= @item.name %></h1>

<div class="row">
  <div class="col-sm-6">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_for(@item, html: { class: 'preview_form' }) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-6 preview_view" id="card_view">
    <%= render 'shared/card_card', card: @item.card_data %>
  </div>
</div>
