<%
  index = card_counter
  next_index = (index + 1)%@cards.size
  prev_index = (index - 1)%@cards.size
  large ||= false
  modal_size = if large
                 'modal-lg'
               else
                 'modal-sm'
               end
%>

<%= render partial: 'shared/modal', locals: { card: card, index: "myModal-#{index}", modal_size: modal_size, prev_index: "#myModal-#{prev_index}", next_index: "#myModal-#{next_index}" } %>
