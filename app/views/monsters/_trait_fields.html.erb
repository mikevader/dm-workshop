<div class="item">
  <%= f.hidden_field :position %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Trait</h3>
    </div>
    <div class="panel-body">
      <%= content_tag :div, class: 'row small-padding' do -%>
          <%= content_tag(:div, f.text_field(:title, class: 'form-control', placeholder: :title), class: 'col-sm-10') %>
          <%= content_tag :div, class: 'col-sm-2' do %>
              <%= content_tag :div, class: 'checkbox' do %>
                  <%= f.label :_destroy do %>
                      <%= f.check_box(:_destroy, "data-action": "attribute#remove") %><span class="bi bi-trash" aria-label="Remove"></span>
                  <% end -%>
              <% end -%>
          <% end -%>
      <% end -%>
      <%= content_tag :div, class: 'row' do -%>
          <%= content_tag(:div, f.text_area(:description, class: 'form-control', rows: 4, placeholder: :description), class: 'col-sm-12') %>
      <% end -%>
    </div>
  </div>
</div>
